<% provide(:title, "Danh sach thong tin nhan vien")%>
<% content_for :admin do %>
<%= render 'admin/shared/nav'%>
<div class="page-container">
    <div class="page-content">
        <div class="sidebar sidebar-main">
            <%= render 'admin/shared/sidebar'%>
        </div>
        <div class="content-wrapper">
<div class="content">
<!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h1 class="panel-title">Listing Staffs</h1>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li class="custombutton"><%= link_to 'New Staff', new_staff_path %></li>
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                </ul>
            </div>
        </div>

        

        <table class="table datatable-basic">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Birthday</th>
                    <th>Gender</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
               <% @staffs.each do |staff| %>
                    <tr>
                       <td><%= staff.name %></td>
                        <td><%= staff.birthday %></td>
                        <td><%= staff.gender %></td>
                        <td><%= staff.phone %></td>
                        <td><%= staff.address %></td>
                        <td><%= staff.email %></td>
                      <td class="text-center">
                            <ul class="icons-list">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li><%= link_to 'Show', staff %></li>
                                        <li><%= link_to 'Edit', edit_staff_path(staff)%></li>
                                        <li><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                                    </ul>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <!-- /basic datatable -->
</div>
        </div>
    </div>
</div>
<% end %>