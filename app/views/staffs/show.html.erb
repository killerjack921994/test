<% provide(:title, "Chi tiet thong tin nhan vien")%>
<%= render 'admin/shared/nav'%>
<div class="page-container">
    <div class="page-content">
        <div class="sidebar sidebar-main">
            <%= render 'admin/shared/sidebar'%>
        </div>
        <div class="content-wrapper">
			
			<div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Show Staffs</span></h4>
                    </div>
                </div>
                <div class="breadcrumb-line">
						<ul class="breadcrumb">
							<li>
                                <%= link_to "<i class='icon-home2 position-left'></i> <span>Dashboard</span>".html_safe, admin_path %>
                            </li>
							<li><%= link_to "<span>Dang sach</span>".html_safe, staffs_path %></li>
							<li><%= link_to "Listing Staffs" , staffs_path %></li>
							<li>Show Staffs</li>
						</ul>
					</div>
            </div>
<div class="content">
				<div class="panel panel-flat">
					<div class="panel-heading">
						<h1 class="panel-title">Show Staffs</h1>
					</div>
                    <div class="panel-body">
							<p>
                              <strong>Name:</strong>
                              <%= @staff.name %>
                            </p>
                            
                            <p>
                              <strong>Birthday:</strong>
                              <%= @staff.birthday.strftime('%d/%m/%Y') %>
                            </p>
                            
                            <p>
                              <strong>Gender:</strong>
                              <%= @staff.gender %>
                            </p>
                            
                            <p>
                              <strong>Phone:</strong>
                              <%= @staff.phone %>
                            </p>
                            
                            <p>
                              <strong>Address:</strong>
                              <%= @staff.address %>
                            </p>
                            
                            <p>
                              <strong>Email:</strong>
                              <%= @staff.email %>
                            </p>
                        <div class="clearfix"></div>    
                        <div class="text-right">
                            <%= link_to 'Edit', edit_staff_path(@staff), class:"btn btn-primary" %>
                            <%= link_to 'Back', staffs_path, class:"btn btn-primary" %>
                        </div>
                    </div>
                </div>
            </div>
</div>
    </div>
</div>
<%= javascript_include_tag 'uniform.min.js' %>
<%= javascript_include_tag 'form_layouts.js' %>
<%= javascript_include_tag 'select2.min.js' %>

<%= javascript_include_tag 'components_thumbnails.js' %>
<%= javascript_include_tag 'fancybox.min.js' %>
<%= javascript_include_tag 'switchery.min.js' %>