<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field required">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control", placeholder:"Nhap ten Khach Hang" %>
  </div>
  <div class="field required">
    <%= f.label :birthday %><br>
    <%= f.text_field :birthday, class:"form-control", id:"anytime-month-numeric", placeholder:"dd/mm/yyyy"%>
  </div>
  <div class="field">
    <%= f.label :gender, class:"display-block" %><br>
		<%= f.label :gender_male, 'Nam', class:"radio-inline" %>
    <%= f.radio_button :gender, 'Nam', class:"styled", :checked => true%>
    <%= f.label :gender_female, 'Nữ', class:"radio-inline" %>
    <%= f.radio_button :gender, 'Nữ', class:"styled" %><br />
  </div>
  <div class="field required">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, :maxlength => 12 , class:"form-control", placeholder:"+99-99-9999-9999"%>
  </div>
  <div class="field required">
    <%= f.label :address %><br>
    <%= f.text_area :address , class:"form-control", placeholder:"Ring street 12"%>
  </div>
  <div class="field required">
    <%= f.label :email %><br>
    <%= f.text_field :email , class:"form-control", placeholder:"eugene@kopyov.com"%>
  </div>
  <div class="actions text-right">
    <%= f.submit nil, :class => 'btn btn-primary'%>
		<%= link_to 'Back', customers_path, class:"btn btn-primary" %>
  </div>
<% end %>
