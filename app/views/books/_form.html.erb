<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@book) do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control", placeholder:"Nhap ten Sach" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: "5" , cols: "5", class:"form-control", placeholder:"Nhap noi dung tom tat Sach" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, class:"form-control", placeholder:"Nhap gia tien" %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <!--<%= f.text_field :image_url, class:"form-control" %>-->
    <%= f.file_field :image , class:"form-control" %>
  </div>
  <div class="actions text-right">
    <%= f.submit nil, :class => 'btn btn-primary'%>
    <%= link_to 'Back', books_path, class:"btn btn-primary" %>
  </div>
<% end %>
