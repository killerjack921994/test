<% provide(:title, t('.showcategories'))%>
<%= render 'admin/shared/nav'%>
<div class="page-container">
    <div class="page-content">
        <div class="sidebar sidebar-main">
            <%= render 'admin/shared/sidebar'%>
        </div>
        <div class="content-wrapper">
			<div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold"><%= t('.showcategories')%></span></h4>
                    </div>
                </div>
                <div class="breadcrumb-line">
						<ul class="breadcrumb">
							<li>
                                <%= link_to "<i class='icon-home2 position-left'></i>".html_safe + t('.dashboard'), admin_path %>
                            </li>
							<li><%= link_to  t('.list'), categories_path %></li>
							<li><%= link_to  t('.listcategories'), categories_path %></li>
							<li><%= t('.showcategories')%></li>
						</ul>
					</div>
            </div>
<div class="content">
				<div class="panel panel-flat">
					<div class="panel-heading">
						<h1 class="panel-title"><%= t('.showcategories')%></h1>
					</div>
                    <div class="panel-body">
                        <p>
                            <strong><%= t('.name')%></strong>
                            <%= @category.name %>
                        </p>
                        <p>
                            <strong><%= t('.description')%></strong>
                            <%= @category.description %>
                          </p>
                        <div class="text-right">
                            <%= link_to t('.edit'), edit_category_path(@category), class: "btn btn-primary" %>
                            <%= link_to t('.back'), categories_path, class: "btn btn-primary"%>
                        </div>
                    </div>
                </div>
            </div>
  </div>
    </div>
</div>
<%= javascript_include_tag 'uniform.min.js' %>
<%= javascript_include_tag 'form_layouts.js' %>
<%= javascript_include_tag 'select2.min.js' %>