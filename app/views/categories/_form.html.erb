<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div class="error_explanation">
      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <div class="alert alert-warning alert-bordered">
          <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
          <span class="text-semibold">Warning! </span><%= message %>
        </div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field required">
    <%= f.label :name, t('.name') %><br>
    <%= f.text_field :name, class:"form-control", placeholder:"Nhap ten the loai" %>
  </div>
  <div class="field required">
    <%= f.label :description, t('.description') %><br>
    <%= f.text_area :description, rows:"5", cols:"5", class:"form-control", placeholder:"Nhap noi dung the loai" %>
  </div>
  <div class="actions text-right">
    <%= f.submit nil, :class => 'btn btn-primary'%>
    <%= link_to t('.back'), categories_path, class: 'btn btn-primary' %>
  </div>
<% end %>