<% provide(:title,t('.showcomment'))%>
<%= render 'admin/shared/nav'%>
<div class="page-container">
    <div class="page-content">
        <div class="sidebar sidebar-main">
            <%= render 'admin/shared/sidebar'%>
        </div>
        <div class="content-wrapper">
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold"><%= t('.showcomment')%></span></h4>
                    </div>
                </div>
                <div class="breadcrumb-line">
						<ul class="breadcrumb">
								<li>
									<%= link_to "<i class='icon-home2 position-left'></i>".html_safe + t('.dashboard'), admin_path %>
								</li>
								<li><%= link_to  t('.comment'), comments_path %></li>
								<li><%= link_to t('.listcomment') , comments_path %></li>
								<li><%= t('.showcomment')%></li>
						</ul>
					</div>
            </div>
             <div class="content">
              <div class="panel panel-flat">
                  <div class="panel-heading">
                    <h1 class="panel-title"><%= t('.showcomment')%></h1>
                  </div>
                    <div class="panel-body">
                      <p>
                        <strong><%= t('.name')%></strong>
                        <%= @comment.name %>
                      </p>
                      
                      <p>
                        <strong><%= t('.ndcomment')%></strong>
                        <%= @comment.comment %>
                      </p>
                      
                      <p>
                        <strong><%= t('.user')%></strong>
                        <%= @comment.user %>
                      </p>
                       <div class="clearfix"></div>    
                        <div class="text-right">
                            <%= link_to t('.edit'), edit_comment_path(@comment), class:"btn btn-primary" %>
                            <%= link_to t('.back'), comments_path, class:"btn btn-primary" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%= javascript_include_tag 'uniform.min.js' %>
<%= javascript_include_tag 'form_layouts.js' %>
<%= javascript_include_tag 'select2.min.js' %>

<%= javascript_include_tag 'components_thumbnails.js' %>
<%= javascript_include_tag 'fancybox.min.js' %>
<%= javascript_include_tag 'switchery.min.js' %>
