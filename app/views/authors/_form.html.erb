<%= form_for(@author) do |f| %>
  <% if @author.errors.any? %>
    <div class="error_explanation">
      <ul>
      <% @author.errors.full_messages.each do |message| %>
        <div class="alert alert-warning alert-bordered">
          <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
          <span class="text-semibold">Warning! </span><%= message %>
        </div>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field required">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control", placeholder:"Nhap ten Tac Gia" %>
  </div>
  <div class="field required">
    <%= f.label :birthday %><br>
    <%= f.text_field :birthday, class:"form-control", id:"anytime-month-numeric", placeholder:"dd/mm/yyyy"%>
  </div>
  <div class="field required">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows:"5", cols:"5", class:"form-control", placeholder:"Nhap tieu su Tac gia" %>
  </div>
  <div class="field required">
    <%= f.label :homeland %><br>
    <%= f.text_field :homeland, class:"form-control", placeholder:"Nhap Que Quan Tac gia" %>
  </div>
  <div class="actions text-right">
    <%= f.submit nil, :class => 'btn btn-primary'%>
    <%= link_to 'Back', authors_path, class:'btn btn-primary' %>
  </div>
<% end %>
